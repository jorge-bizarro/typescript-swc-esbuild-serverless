{
  "minify": true,
  "isModule": true,
  "sourceMaps": true,
  "jsc": {
    "minify": {
      "compress": {
        "unused": true
      },
      "mangle": true
    },
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "target": "es2022",
    "loose": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules",
        "src/*"
      ]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
